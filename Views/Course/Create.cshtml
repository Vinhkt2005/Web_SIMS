@model Web_SIMS.Models.Course

@{
    ViewData["Title"] = "Thêm khóa học mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-book-plus me-2"></i>Thêm khóa học mới
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                                </h5>

                                <div class="mb-3">
                                    <label asp-for="CourseCode" class="form-label fw-semibold">
                                        <i class="fas fa-id-card me-2"></i>Mã khóa học
                                    </label>
                                    <input asp-for="CourseCode" class="form-control" placeholder="VD: CS101" />
                                    <span asp-validation-for="CourseCode" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CourseName" class="form-label fw-semibold">
                                        <i class="fas fa-book me-2"></i>Tên khóa học
                                    </label>
                                    <input asp-for="CourseName" class="form-control" placeholder="Nhập tên khóa học" />
                                    <span asp-validation-for="CourseName" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label fw-semibold">
                                        <i class="fas fa-align-left me-2"></i>Mô tả
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Mô tả chi tiết về khóa học"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Credits" class="form-label fw-semibold">
                                        <i class="fas fa-graduation-cap me-2"></i>Số tín chỉ
                                    </label>
                                    <input asp-for="Credits" type="number" class="form-control" min="1" max="10" placeholder="1-10" />
                                    <span asp-validation-for="Credits" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-cogs me-2"></i>Cấu hình khóa học
                                </h5>

                                <div class="mb-3">
                                    <label asp-for="MaxStudents" class="form-label fw-semibold">
                                        <i class="fas fa-users me-2"></i>Số sinh viên tối đa
                                    </label>
                                    <input asp-for="MaxStudents" type="number" class="form-control" min="1" max="200" placeholder="1-200" />
                                    <span asp-validation-for="MaxStudents" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Semester" class="form-label fw-semibold">
                                        <i class="fas fa-calendar me-2"></i>Học kỳ
                                    </label>
                                    <select asp-for="Semester" class="form-select">
                                        <option value="">Chọn học kỳ</option>
                                        <option value="Học kỳ 1">Học kỳ 1</option>
                                        <option value="Học kỳ 2">Học kỳ 2</option>
                                        <option value="Học kỳ 3">Học kỳ 3</option>
                                        <option value="Học kỳ hè">Học kỳ hè</option>
                                    </select>
                                    <span asp-validation-for="Semester" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AcademicYear" class="form-label fw-semibold">
                                        <i class="fas fa-calendar-alt me-2"></i>Năm học
                                    </label>
                                    <select asp-for="AcademicYear" class="form-select">
                                        <option value="">Chọn năm học</option>
                                        <option value="2024-2025">2024-2025</option>
                                        <option value="2023-2024">2023-2024</option>
                                        <option value="2022-2023">2022-2023</option>
                                        <option value="2021-2022">2021-2022</option>
                                    </select>
                                    <span asp-validation-for="AcademicYear" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Instructor" class="form-label fw-semibold">
                                        <i class="fas fa-chalkboard-teacher me-2"></i>Giảng viên
                                    </label>
                                    <input asp-for="Instructor" class="form-control" placeholder="Tên giảng viên phụ trách" />
                                    <span asp-validation-for="Instructor" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>Lưu khóa học
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Auto-format course code
        document.getElementById('CourseCode').addEventListener('input', function(e) {
            let value = e.target.value.toUpperCase();
            e.target.value = value;
        });

        // Auto-format instructor name
        document.getElementById('Instructor').addEventListener('input', function(e) {
            let value = e.target.value;
            // Capitalize first letter of each word
            value = value.replace(/\b\w/g, function(l) { return l.toUpperCase(); });
            e.target.value = value;
        });
    </script>
}