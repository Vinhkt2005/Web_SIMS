@model Web_SIMS.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-key me-2"></i>Đổi mật khẩu
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-semibold">
                                <i class="fas fa-lock me-2"></i>Mật khẩu hiện tại
                            </label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold">
                                <i class="fas fa-key me-2"></i>Mật khẩu mới
                            </label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                <i class="fas fa-check-circle me-2"></i>Xác nhận mật khẩu mới
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Đổi mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}