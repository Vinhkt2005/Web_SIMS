@model Web_SIMS.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-100 bg-gradient-primary">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-key fa-3x text-primary"></i>
                        </div>
                        <h2 class="fw-bold text-dark mb-2">Quên mật khẩu</h2>
                        <p class="text-muted">Nhập email để nhận hướng dẫn đặt lại mật khẩu</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-paper-plane me-2"></i>Gửi yêu cầu
                        </button>

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}