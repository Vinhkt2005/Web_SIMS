@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<div class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-graduation-cap me-3"></i>
                    Web SIMS
                </h1>
                <p class="lead mb-4">
                    Hệ thống Quản lý Thông tin Sinh viên hiện đại,
                    giúp quản lý hiệu quả thông tin sinh viên, khóa học và điểm số.
                </p>
                <div class="d-flex gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-light btn-lg">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </a>
                    }
                    <a href="#features" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Tìm hiểu thêm
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <i class="fas fa-users fa-10x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div id="features" class="py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="fw-bold mb-3">Tính năng nổi bật</h2>
                <p class="text-muted lead">Hệ thống được thiết kế với các tính năng hiện đại và thân thiện</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-users fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title fw-bold">Quản lý Sinh viên</h5>
                        <p class="card-text text-muted">
                            Quản lý thông tin sinh viên một cách hiệu quả với giao diện thân thiện và dễ sử dụng.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-book fa-3x text-success"></i>
                        </div>
                        <h5 class="card-title fw-bold">Quản lý Khóa học</h5>
                        <p class="card-text text-muted">
                            Tạo và quản lý các khóa học với thông tin chi tiết về giảng viên và số lượng sinh viên.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-chart-line fa-3x text-info"></i>
                        </div>
                        <h5 class="card-title fw-bold">Theo dõi Điểm số</h5>
                        <p class="card-text text-muted">
                            Theo dõi và quản lý điểm số sinh viên với báo cáo chi tiết và thống kê trực quan.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <div class="stat-icon mb-3">
                        <i class="fas fa-user-graduate fa-3x text-primary"></i>
                    </div>
                    <h3 class="fw-bold text-primary">500+</h3>
                    <p class="text-muted">Sinh viên</p>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <div class="stat-icon mb-3">
                        <i class="fas fa-book-open fa-3x text-success"></i>
                    </div>
                    <h3 class="fw-bold text-success">50+</h3>
                    <p class="text-muted">Khóa học</p>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <div class="stat-icon mb-3">
                        <i class="fas fa-chalkboard-teacher fa-3x text-info"></i>
                    </div>
                    <h3 class="fw-bold text-info">30+</h3>
                    <p class="text-muted">Giảng viên</p>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <div class="stat-icon mb-3">
                        <i class="fas fa-award fa-3x text-warning"></i>
                    </div>
                    <h3 class="fw-bold text-warning">95%</h3>
                    <p class="text-muted">Hài lòng</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-3">Sẵn sàng bắt đầu?</h2>
        <p class="lead mb-4">Tham gia hệ thống Web SIMS để quản lý thông tin sinh viên hiệu quả hơn</p>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-light btn-lg">
                <i class="fas fa-tachometer-alt me-2"></i>Vào Dashboard
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập ngay
            </a>
        }
    </div>
</div>
