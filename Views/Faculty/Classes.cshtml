@model List<Web_SIMS.Models.Course>
@{
    ViewData["Title"] = "Lớp của tôi";
}
<div class="container-fluid">
    <h1 class="h3 mb-4"><i class="fas fa-list me-2"></i>Lớp của tôi</h1>
    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Mã lớp</th>
                        <th>Tên lớp</th>
                        <th>Số sinh viên</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.CourseCode</td>
                            <td>@c.CourseName</td>
                            <td>@(c.Enrollments?.Count(e => e.Status == EnrollmentStatus.Approved) ?? 0)</td>
                            <td>
                                <a asp-action="Students" asp-route-classId="@c.CourseId" class="btn btn-sm btn-outline-primary">Sinh viên</a>
                                <a asp-action="Grades" asp-route-classId="@c.CourseId" class="btn btn-sm btn-outline-success">Nhập điểm</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
